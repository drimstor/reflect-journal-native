{
  "expo": {
    "name": "Reflexity",
    "slug": "reflexity",
    "scheme": "reflexity",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.reflexity",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Приложению требуется доступ к микрофону для записи голосовых сообщений",
        "NSPhotoLibraryUsageDescription": "Приложению требуется доступ к фото для загрузки изображений",
        "NSPhotoLibraryAddUsageDescription": "Приложению требуется доступ к фото для сохранения изображений"
      }
    },
    "android": {
      "package": "com.anonymous.reflexity",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-font",
      "expo-secure-store",
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 34,
            "buildToolsVersion": "35.0.0",
            "enableProguardInReleaseBuilds": true,
            "enableJetifier": true,

            "extraProperties": {
              "android.useAndroidX": "true",
              "android.enableJetifier": "true",
              "android.disableOldTargetPlatformWarnings": "true",
              "android.suppressUnsupportedCompileSdk": "34",
              "android.jetifier.ignorelist": "bcprov",
              "android.jetifier.blacklist": "com.android.support"
            }
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "4426d270-9874-4efd-a402-a0951bee7179"
      }
    }
  }
}