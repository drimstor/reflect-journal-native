{
  "expo": {
    "name": "Reflexity",
    "slug": "reflect-journal",
    "scheme": "reflexity",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.loungeway.reflectjournal",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Приложению требуется доступ к микрофону для записи голосовых сообщений",
        "NSPhotoLibraryUsageDescription": "Приложению требуется доступ к фото для загрузки изображений",
        "NSPhotoLibraryAddUsageDescription": "Приложению требуется доступ к фото для сохранения изображений",
        "NSCameraUsageDescription": "Приложению требуется доступ к камере для создания фотографий",
        "UIBackgroundModes": ["background-processing"]
      }
    },
    "android": {
      "package": "com.loungeway.reflectjournal",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA",
        "POST_NOTIFICATIONS"
      ]
    },
    "plugins": [
      "expo-font",
      "expo-secure-store",
      "expo-web-browser",
      "expo-image-picker",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#F1F2F3",
          "image": "./assets/images/logo.png",
          "dark": {
            "image": "./assets/images/logo.png",
            "backgroundColor": "#181822"
          },
          "imageWidth": 200,
          "resizeMode": "contain"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#4da3b0",
          "sounds": []
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "useAndroidX": true,
            "enableJetifier": true,
            "gradleProperties": {
              "org.gradle.jvmargs": "-Xmx4096m -XX:MaxMetaspaceSize=1024m",
              "android.enableResourceOptimizations": "false"
            }
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "dc34c5dd-1225-458c-b831-70832ef91cda"
      }
    }
  }
}